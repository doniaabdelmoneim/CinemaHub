@model Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>You are about to permanently delete this actor. This action cannot be undone.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <img src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "/images/actor-placeholder.jpg" : Model.PhotoUrl)"
                                 class="img-fluid rounded-circle border border-2 border-danger"
                                 style="width: 150px; height: 150px; object-fit: cover;"
                                 alt="@Model.FullName">
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.FullName</h4>
                            <p class="text-muted">
                                <i class="bi bi-film"></i> Appears in @Model.ActorMovies?.Count movies
                            </p>
                            <p>@Model.Bio</p>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>