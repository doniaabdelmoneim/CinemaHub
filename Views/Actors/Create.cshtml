@model Actor
@{
    ViewData["Title"] = "Add New Actor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-person-plus me-2"></i>Add New Actor
                    </h1>
                </div>
                <div class="card-body p-4">
    <form method="post">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" placeholder=" " required />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" placeholder=" " required />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <div class="form-floating">
            <input asp-for="BirthDate" type="date" class="form-control" placeholder=" " />
            <label asp-for="BirthDate"></label>
            <span asp-validation-for="BirthDate" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-4">
        <div class="form-floating">
            <input asp-for="PhotoUrl" class="form-control" placeholder=" " id="photoUrlInput" />
            <label asp-for="PhotoUrl">Profile Image URL</label>
            <span asp-validation-for="PhotoUrl" class="text-danger small"></span>
            <div class="form-text">Enter a valid image URL or upload an image</div>
        </div>
    </div>

    <div class="mb-4">
        <div class="form-floating">
            <textarea asp-for="Bio" class="form-control" placeholder=" " style="height: 120px"></textarea>
            <label asp-for="Bio"></label>
            <span asp-validation-for="Bio" class="text-danger small"></span>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
        <button type="submit" class="btn btn-primary" value="add">
            <i class="bi bi-save"></i> Create Actor
        </button>
    </div>
</form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


}

    