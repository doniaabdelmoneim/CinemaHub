@model Producer
@{
    ViewData["Title"] = "Delete Producer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>You are about to permanently delete <strong>@Model.Name</strong>. This action cannot be undone.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <img src="@(!string.IsNullOrEmpty(Model.CompanyLogoUrl) ? Model.CompanyLogoUrl : "/images/producer-placeholder.png")"
                                 class="img-fluid rounded"
                                 style="max-height: 200px;"
                                 alt="@Model.Name logo">
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Name</h4>
                            <p class="text-muted"><i class="bi bi-envelope"></i> @Model.ContactEmail</p>
                            <p>@(!string.IsNullOrEmpty (Model.Bio) ? Model.Bio : "No description available")</p>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
