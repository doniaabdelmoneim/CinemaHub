@model Producer
@{
    ViewData["Title"] = "Producer Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="row g-0">
                    <!-- Logo Column -->
                    <div class="col-md-4 d-flex align-items-center bg-dark p-4">
                        <img src="@(!string.IsNullOrEmpty(Model.CompanyLogoUrl) ? Model.CompanyLogoUrl : "/images/producer-placeholder.png")"
                             class="img-fluid rounded shadow"
                             alt="@Model.Name logo">
                    </div>

                    <!-- Details Column -->
                    <div class="col-md-8">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h1 class="text-gradient mb-0">@Model.Name</h1>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-arrow-left"></i> Back
                                    </a>
                                </div>
                            </div>

                            <div class="producer-meta mb-4">
                                <span class="badge bg-primary me-2">
                                    <i class="bi bi-envelope"></i> @Model.ContactEmail
                                </span>
                                <span class="badge bg-success">
                                    <i class="bi bi-film"></i> @Model.Movies?.Count movies
                                </span>
                            </div>

                            <div class="producer-bio mb-4 p-3 bg-dark rounded">
                                <h5 class="text-primary mb-3">
                                    <i class="bi bi-file-text"></i> About
                                </h5>
                                <p>@(!string.IsNullOrEmpty (Model.Bio) ? Model.Bio : "No biography available")</p>
                            </div>

                            <!-- Movies Section -->
                            <div class="producer-movies">
                                <h5 class="text-primary mb-3">
                                    <i class="bi bi-collection-play"></i> Produced Movies
                                </h5>
                                @if (Model.Movies?.Any () == true)
                                {
                                    <div class="row g-2">
                                        @foreach (var movie in Model.Movies)
                                        {
                                            <div class="col-md-6">
                                                <div class="movie-badge p-2 rounded d-flex align-items-center">
                                                    <img src="@movie.PosterUrl"
                                                         class="me-2"
                                                         style="width: 40px; height: 60px; object-fit: cover;">
                                                    <span>@movie.Title</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">No movies found for this producer</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
