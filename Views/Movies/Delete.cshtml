@model CinemaHub.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-gradient text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Delete Movie
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left me-1"></i>Cancel
        </a>
    </div>

    <div class="card border-0 shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-trash me-2"></i>Confirm Deletion
            </h3>
        </div>
        
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Warning!</h4>
                <p>You are about to permanently delete this movie. This action cannot be undone.</p>
                <hr>
                <p class="mb-0">All related data (showtimes, actor relationships, etc.) will also be removed.</p>
            </div>
            
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@Model.PosterUrl" class="img-fluid rounded shadow mb-3" alt="@Model.Title" style="max-height: 300px;" onerror="this.onerror=null;this.src='/images/default-movie.jpg';">
                </div>
                
                <div class="col-md-8">
                    <h3 class="text-danger">@Model.Title</h3>
                    <p class="text-muted">@Model.Description</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5><i class="bi bi-collection-play text-primary me-2"></i>Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Category:</strong> @Model.Category
                                </li>
                                <li class="list-group-item">
                                    <strong>Duration:</strong> @Model.DurationMinutes mins
                                </li>
                                <li class="list-group-item">
                                    <strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy")
                                </li>
                            </ul>
                        </div>
                        
                        <div class="col-md-6">
                            <h5><i class="bi bi-info-circle text-primary me-2"></i>Additional Info</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Director:</strong> @Model.Director
                                </li>
                                <li class="list-group-item">
                                    <strong>IMDB Rating:</strong> @(Model.ImdbRating?.ToString("0.0") ?? "N/A")
                                </li>
                                <li class="list-group-item">
                                    <strong>Price:</strong> $@Model.price.ToString("0.00")
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger rounded-pill shadow-sm px-4">
                        <i class="bi bi-trash me-1"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}